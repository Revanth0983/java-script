<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <script>
        let customer = prompt("Are you a premium customer? (yes or no)").toLowerCase();
        let spend = parseInt(prompt("Enter the amount of money spent:"));

        if (spend > 100 && customer === "yes") {
            document.write(`Your bill after discount: ${spend - (spend * 0.20)}`);
        } else if (spend > 50 && spend <= 100) {
            document.write(`Your bill after discount: ${spend - (spend * 0.10)}`);
        } else if (customer === "yes") {
            document.write(`Your bill after discount: ${spend - (spend * 0.05)}`);
        } else {
            document.write(`Your total bill: ${spend}`);
        }
    </script>
</body>
</html>
